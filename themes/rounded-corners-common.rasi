* {
  background-color: transparent;
  font: "Ubuntu Regular 11";
  text-color: @colors-text;
}

mainbox {
  background-color: @colors-background;
  border-radius: 8px;
  border: 1px solid;
  border-color: @colors-border;
}

inputbar {
  border: 0 0 1px solid;
  border-color: @colors-border;
  children: [entry];
  font: "Ubuntu Regular 12";
}

entry {
  placeholder: "Search for apps";
  placeholder-color: #999;
  padding: 16px;
}

listview {
  columns: 1;
  lines: 6;
  padding: 8px;
}

element {
  spacing: 12px;
  padding: 8px;
  border-radius: 8px;
  text-color: #6f6f6f;
}

element selected {
  background-color: @colors-selected;
  text-color: #171717;
}

element-text {
  background-color: inherit;
  text-color: inherit;
}

element-icon {
  size: 1.25em;
}
